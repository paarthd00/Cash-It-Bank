@page
@model EditModel


<h2>Edit Account</h2>      
<form method="post">

        <div class="row">
        <div class="form-group col-lg-4 col-md-6 col-12">
                <label for="balance">Balance</label>
                <input min="0" name="balance" placeholder="Balance" class="form-control px-2 py-2 mb-2" asp-for="balance"
                        type="number" min="0" step="0.01"/>
        </div>
        <div class="form-group col-lg-4 col-md-6 col-12">
                <label for="firstname">First Name</label>
                <input name="firstname" placeholder="FirstName" class="form-control px-2 py-2 mb-2" asp-for="firstName"
                        type="text"/>
        </div>
        <div class="form-group col-lg-4 col-md-6 col-12">
                <label for="lastname">LastName</label>
                <input name="lastname" placeholder="LastName" class="form-control px-2 py-2 mb-2" asp-for="lastName"
                        type="text"/>
        </div>
        </div>     

        <input class="btn btn-secondary" type="submit" value="Update" />
</form>

<hr>
